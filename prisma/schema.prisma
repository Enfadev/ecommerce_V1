generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model ContactPage {
  id              Int      @id @default(autoincrement())
  heroTitle       String
  heroSubtitle    String
  heroDescription String
  contactMethods  Json
  officeLocations Json
  businessHours   Json
  socialMedia     Json
  updatedAt       DateTime @updatedAt
}

model HomePage {
  id               Int      @id @default(autoincrement())
  heroSlides       Json // Array of hero carousel slides
  heroTitle        String
  heroSubtitle     String
  heroDescription  String
  features         Json // Array of features
  statsData        Json // Stats section data
  aboutPreview     Json // About section preview
  testimonialsData Json // Testimonials data
  updatedAt        DateTime @updatedAt
}

model AboutPage {
  id              Int      @id @default(autoincrement())
  heroTitle       String
  heroSubtitle    String
  heroDescription String
  companyStory    String   @db.Text
  mission         String   @db.Text
  vision          String   @db.Text
  values          Json // Array of company values
  statistics      Json // Array of stats
  features        Json // Array of features
  teamMembers     Json // Array of team members
  timeline        Json // Company history timeline
  updatedAt       DateTime @updatedAt
}

model ProductPage {
  id                 Int      @id @default(autoincrement())
  heroTitle          String
  heroSubtitle       String
  heroDescription    String
  featuredCategories Json // Array of featured categories
  promotionalBanner  Json // Promotional banner data
  filterOptions      Json // Available filter options
  sortOptions        Json // Available sort options
  seoContent         Json // SEO content blocks
  updatedAt          DateTime @updatedAt
}

model Product {
  id              Int            @id @default(autoincrement())
  name            String
  description     String?
  price           Float
  imageUrl        String?
  images          ProductImage[]
  stock           Int            @default(0)
  status          String         @default("active")
  sku             String?        @unique
  brand           String?
  slug            String?        @unique
  metaTitle       String?
  metaDescription String?
  discountPrice   Float?
  promoExpired    DateTime?
  categoryId      Int?
  category        Category?      @relation(fields: [categoryId], references: [id])
  cartItems       CartItem[]
  orderItems      OrderItem[]
  wishlistItems   WishlistItem[]
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
}

model ProductImage {
  id        Int     @id @default(autoincrement())
  url       String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId Int
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  products Product[]
}

enum Role {
  ADMIN
  USER
}

model User {
  id            Int           @id @default(autoincrement())
  name          String?
  email         String        @unique
  password      String?
  role          Role          @default(USER)
  emailVerified DateTime?
  image         String?
  phoneNumber   String?
  address       String?
  dateOfBirth   String?
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  cart          Cart?
  orders        Order[]
  securityLogs  SecurityLog[]
  wishlist      Wishlist?
  chatRooms     ChatRoom[]
  adminChats    ChatRoom[]    @relation("AdminChats")
  sentMessages  ChatMessage[] @relation("SentMessages")
}

model Account {
  id                Int     @id @default(autoincrement())
  userId            Int
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           Int      @id @default(autoincrement())
  sessionToken String   @unique
  userId       Int
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Cart {
  id        Int        @id @default(autoincrement())
  userId    Int        @unique
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     CartItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model CartItem {
  id        Int      @id @default(autoincrement())
  cartId    Int
  cart      Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)
  productId Int
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  quantity  Int      @default(1)
  selected  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([cartId, productId])
}

model Wishlist {
  id        Int            @id @default(autoincrement())
  userId    Int            @unique
  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     WishlistItem[]
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
}

model WishlistItem {
  id         Int      @id @default(autoincrement())
  wishlistId Int
  wishlist   Wishlist @relation(fields: [wishlistId], references: [id], onDelete: Cascade)
  productId  Int
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([wishlistId, productId])
}

model Order {
  id          Int         @id @default(autoincrement())
  orderNumber String      @unique
  userId      Int
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  items       OrderItem[]
  status      OrderStatus @default(PENDING)

  // Customer Information
  customerName    String
  customerEmail   String
  customerPhone   String
  shippingAddress String
  postalCode      String?
  notes           String?

  // Payment Information
  paymentMethod String        @default("Bank Transfer")
  paymentStatus PaymentStatus @default(PENDING)
  paymentProof  String?

  // Price Information
  subtotal    Float
  shippingFee Float @default(0)
  tax         Float @default(0)
  discount    Float @default(0)
  totalAmount Float

  // Shipping Information
  trackingNumber    String?
  estimatedDelivery DateTime?

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  orderId   Int
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId Int
  product   Product @relation(fields: [productId], references: [id], onDelete: Restrict)

  // Product snapshot at time of purchase
  productName  String
  productPrice Float
  productImage String?
  quantity     Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([orderId, productId])
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
  RETURNED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

model SystemSettings {
  id               Int     @id @default(autoincrement())
  storeName        String  @default("E-Commerce Store")
  storeDescription String  @default("Trusted online store")
  contactEmail     String  @default("contact@store.com")
  currency         String  @default("USD")
  timezone         String  @default("Asia/Jakarta")
  language         String  @default("en")
  logoUrl          String? // Logo website

  // Company Contact Information
  phoneNumber      String? // Nomor telepon kantor
  officeAddress    String? @db.Text // Alamat kantor

  // Security Settings
  enableTwoFactor Boolean @default(false)
  sessionTimeout  Int     @default(24) // hours

  // System Information
  version String @default("1.0.0")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("system_settings")
}

model SecurityLog {
  id          Int       @id @default(autoincrement())
  userId      Int?
  user        User?     @relation(fields: [userId], references: [id])
  action      String // LOGIN, LOGOUT, PASSWORD_CHANGE, FAILED_LOGIN, etc.
  description String
  ipAddress   String?
  userAgent   String?   @db.Text
  status      LogStatus @default(SUCCESS)
  createdAt   DateTime  @default(now())

  @@map("security_logs")
}

enum LogStatus {
  SUCCESS
  FAILED
  WARNING
}

model ChatRoom {
  id           Int           @id @default(autoincrement())
  userId       Int
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  adminId      Int?
  admin        User?         @relation("AdminChats", fields: [adminId], references: [id])
  status       ChatStatus    @default(OPEN)
  subject      String?
  priority     ChatPriority  @default(NORMAL)
  lastMessage  String?
  lastActivity DateTime      @default(now())
  isRead       Boolean       @default(false)
  messages     ChatMessage[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@map("chat_rooms")
}

model ChatMessage {
  id         Int      @id @default(autoincrement())
  chatRoomId Int
  chatRoom   ChatRoom @relation(fields: [chatRoomId], references: [id], onDelete: Cascade)
  senderId   Int
  sender     User     @relation("SentMessages", fields: [senderId], references: [id])
  message    String   @db.Text
  messageType MessageType @default(TEXT)
  isRead     Boolean  @default(false)
  createdAt  DateTime @default(now())

  @@map("chat_messages")
}

enum ChatStatus {
  OPEN
  CLOSED
  RESOLVED
}

enum ChatPriority {
  LOW
  NORMAL
  HIGH
  URGENT
}

enum MessageType {
  TEXT
  IMAGE
  FILE
}
