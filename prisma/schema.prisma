model ContactPage {
  id             Int      @id @default(autoincrement())
  heroTitle      String
  heroSubtitle   String
  heroDescription String
  contactMethods Json
  officeLocations Json
  businessHours  Json
  socialMedia    Json
  updatedAt      DateTime @updatedAt
}

model HomePage {
  id             Int      @id @default(autoincrement())
  heroSlides     Json     // Array of hero carousel slides
  heroTitle      String
  heroSubtitle   String
  heroDescription String
  features       Json     // Array of features
  statsData      Json     // Stats section data
  aboutPreview   Json     // About section preview
  testimonialsData Json   // Testimonials data
  updatedAt      DateTime @updatedAt
}

model AboutPage {
  id             Int      @id @default(autoincrement())
  heroTitle      String
  heroSubtitle   String
  heroDescription String
  companyStory   String   @db.Text
  mission        String   @db.Text
  vision         String   @db.Text
  values         Json     // Array of company values
  statistics     Json     // Array of stats
  features       Json     // Array of features
  teamMembers    Json     // Array of team members
  timeline       Json     // Company history timeline
  updatedAt      DateTime @updatedAt
}

model EventPage {
  id             Int      @id @default(autoincrement())
  heroTitle      String
  heroSubtitle   String
  heroDescription String
  activeEvents   Json     // Array of active events
  upcomingEvents Json     // Array of upcoming events
  pastEvents     Json     // Array of past events
  eventCategories Json    // Array of event categories
  updatedAt      DateTime @updatedAt
}

model ProductPage {
  id             Int      @id @default(autoincrement())
  heroTitle      String
  heroSubtitle   String
  heroDescription String
  featuredCategories Json // Array of featured categories
  promotionalBanner Json  // Promotional banner data
  filterOptions  Json     // Available filter options
  sortOptions    Json     // Available sort options
  seoContent     Json     // SEO content blocks
  updatedAt      DateTime @updatedAt
}
// Prisma schema for MySQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Product {
  id             Int      @id @default(autoincrement())
  name           String
  description    String?
  price          Float
  imageUrl       String?
  images         ProductImage[]
  stock          Int      @default(0)
  status         String   @default("active")
  sku            String?  @unique
  brand          String?
  slug           String?  @unique
  metaTitle      String?
  metaDescription String?
  discountPrice  Float?
  promoExpired   DateTime?
  categoryId     Int?
  category       Category? @relation(fields: [categoryId], references: [id])
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model ProductImage {
  id        Int    @id @default(autoincrement())
  url       String
  product   Product @relation(fields: [productId], references: [id])
  productId Int
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  products  Product[]
}

enum Role {
  ADMIN
  USER
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
