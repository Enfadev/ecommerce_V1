# =====================================
# PRODUCTION DATABASE CONFIGURATION
# =====================================

# Database URL - DO NOT expose externally!
DATABASE_URL=mysql://ecommerce_user:CHANGE_THIS_PASSWORD@db:3306/ecommerce

# MySQL Container Configuration
DB_ROOT_PASSWORD=CHANGE_THIS_STRONG_ROOT_PASSWORD
DB_NAME=ecommerce
DB_USER=ecommerce_user
DB_PASSWORD=CHANGE_THIS_PASSWORD
DB_PORT=3306

# =====================================
# APPLICATION CONFIGURATION
# =====================================

APP_PORT=3000
NGINX_PORT=80
NODE_ENV=production

# =====================================
# NEXTAUTH CONFIGURATION (CRITICAL!)
# =====================================

# Your production domain (from Cloudflare Tunnel)
NEXTAUTH_URL=https://yourdomain.com

# Generate with: openssl rand -base64 32
# Or PowerShell: [Convert]::ToBase64String([System.Security.Cryptography.RandomNumberGenerator]::GetBytes(32))
NEXTAUTH_SECRET=GENERATE_SECRET_WITH_OPENSSL_RAND_BASE64_32

# =====================================
# GOOGLE OAUTH (Production Keys)
# =====================================

# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret

# =====================================
# STRIPE CONFIGURATION (Production)
# =====================================

# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_YOUR_STRIPE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_STRIPE_PUBLISHABLE_KEY

# =====================================
# PAYPAL CONFIGURATION (Production)
# =====================================

# Get from: https://developer.paypal.com/dashboard/
PAYPAL_CLIENT_ID=your-production-paypal-client-id
PAYPAL_CLIENT_SECRET=your-production-paypal-client-secret

# =====================================
# SECURITY NOTES
# =====================================
