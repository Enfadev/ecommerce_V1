# =====================================
# DATABASE CONFIGURATION
# =====================================

# Docker Database Configuration (Default - Recommended)
DATABASE_URL=mysql://ecommerce_user:ecommerce_password@localhost:3306/ecommerce

# Laragon/Local Database Configuration (Alternative)
# DATABASE_URL=mysql://root:@localhost:3306/ecommerce_db_v1

# Production Database (MySQL - Update with your credentials)
# DATABASE_URL=mysql://username:password@localhost:3306/ecommerce_db_v1

# =====================================
# DOCKER ENVIRONMENT VARIABLES
# =====================================
DB_ROOT_PASSWORD=rootpassword
DB_NAME=ecommerce
DB_USER=ecommerce_user
DB_PASSWORD=ecommerce_password
DB_PORT=3306

# =====================================
# APPLICATION CONFIGURATION
# =====================================
APP_PORT=3000
NODE_ENV=development

# Better Auth Configuration
BETTER_AUTH_URL=http://localhost:3000
BETTER_AUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Stripe Configuration
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# PayPal Configuration
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# Resend Email Configuration (for Password Reset)
RESEND_API_KEY=your-resend-api-key
EMAIL_FROM=noreply@yourdomain.com
